# Database - Local PostgreSQL
# DATABASE_URL=postgresql://ahnsomin@localhost/bluedonulab

# Database - Azure PostgreSQL
# Format: postgresql://username:password@servername.postgres.database.azure.com:5432/dbname?sslmode=require
DATABASE_URL=postgresql://your_admin_user@your_server_name:your_password@your_server_name.postgres.database.azure.com:5432/your_database_name?sslmode=require

# Application
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Kakao OAuth
KAKAO_REST_API_KEY=your_kakao_rest_api_key_here
KAKAO_REDIRECT_URI=http://localhost:8000/auth/kakao/callback
KAKAO_CLIENT_SECRET=your_kakao_client_secret_here_if_needed

# CORS (Frontend URL)
FRONTEND_URL=http://localhost:3000

# Azure OpenAI (AI Care Plan Generation)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your_deployment_name_here
AZURE_OPENAI_API_VERSION=2024-08-01-preview
AZURE_OPENAI_TIMEOUT=30  # Request timeout in seconds (default: 30)

# XGBoost Model (Caregiver Matching)
XGBOOST_MODEL_PATH=/path/to/xgboost/model.pkl
XGBOOST_MODEL_FALLBACK=True  # Use fallback matching if model fails

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log

# Features
ENABLE_AI_CARE_PLAN=True  # Enable AI-based care plan generation
ENABLE_MATCHING_ALGORITHM=True  # Enable caregiver matching algorithm
